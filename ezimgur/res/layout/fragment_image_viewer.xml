<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/vg_image_viewer_container"
              android:orientation="vertical"
              android:paddingTop="1dip"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
    <com.ezimgur.view.component.TouchImageView
            android:id="@+id/tiv_main_image"
            android:background="#000000"
            android:layout_gravity="center_horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="centerInside"/>
    <com.ezimgur.view.component.TouchWebView
            android:id="@+id/twv_main_image"
            android:background="#000000"
            android:layout_gravity="center_horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>
    <ScrollView
            android:id="@+id/frag_iv_album_caption_container"
            android:layout_alignParentBottom="true"
            android:foregroundGravity="bottom"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <TextView
                    android:id="@+id/frag_iv_tv_album_caption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/White"
                    android:padding="3dip"
                    android:background="@color/black_slight_transparent"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>