<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:wheel="http://schemas.android.com/apk/res-auto"
                xmlns:app="http://schemas.android.com/apk/res/com.ezimgur"
                android:id="@+id/fragment_gallery_item_container"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
        <com.ezimgur.view.component.TouchImageView
            android:id="@+id/fragment_gallery_item_tiv"
            android:background="#000000"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"/>
        <com.ezimgur.view.component.TouchWebView
            android:id="@+id/fragment_gallery_item_twv"
            android:background="#000000"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.ezimgur.view.component.GifDecoderView
            android:id="@+id/fragment_gallery_item_gif_view"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.ezimgur.view.component.TouchVideoView
            android:id="@+id/fragment_gallery_item_video_view"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    <com.ezimgur.view.component.ProgressWheel
            android:id="@+id/frag_gallery_item_progress"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:matProg_barColor="@color/ezimgur_red"
            app:matProg_progressIndeterminate="true" />
    <ScrollView
        android:id="@+id/frag_iv_album_caption_container"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <TextView
                android:id="@+id/frag_iv_tv_album_caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/White"
                android:padding="3dip"
                android:background="@color/black_slight_transparent"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
