<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res/com.ezimgur"
              android:layout_gravity="left"
              android:background="#80000000"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content">
    <RelativeLayout
            android:id="@+id/caption_container"
            android:paddingLeft="5dip"
            android:layout_marginRight="10dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:id="@+id/points_container"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <com.ezimgur.view.component.VerticalTextView
                    android:id="@+id/cv_caption_points"
                    android:gravity="bottom"
                    android:textColor="@color/text_accent"
                    android:layout_marginTop="5dip"
                    android:textSize="16dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
                android:layout_toRightOf="@id/points_container"
                android:id="@+id/cv_caption"
                android:textColor="#FFFFFF"
                android:linksClickable="true"
                android:autoLink="web"
                android:minLines="2"
                android:paddingRight="12dip"
                android:layout_width="fill_parent"
                android:ellipsize="end"
                android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/cv_tv_upvote"
            android:layout_below="@id/cv_caption"
            android:src="@drawable/upvote_empty"
            android:paddingTop="0dip"
            android:padding="5dip"
            android:layout_toRightOf="@id/points_container"
            android:layout_width="24dip"
            android:layout_height="30dip"
            android:layout_marginLeft="0dip"/>
        <ImageView
            android:id="@+id/cv_tv_downvote"
            android:layout_below="@id/cv_caption"
            android:src="@drawable/downvote_empty"
            android:paddingTop="0dip"
            android:padding="5dip"
            android:layout_toRightOf="@id/cv_tv_upvote"
            android:layout_width="24dip"
            android:layout_height="30dip"/>
        <TextView
                android:id="@+id/cv_author"
                android:layout_below="@id/cv_caption"
                android:textColor="@color/text_accent"
                android:maxWidth="280dip"
                android:maxLines="1"
                android:textSize="12dip"
                android:ellipsize="end"
                android:layout_toRightOf="@id/cv_tv_downvote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:paddingTop="5dip"/>
        <TextView
            android:id="@+id/cv_timeago"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/OpaqueGainsboro"
            android:layout_below="@id/cv_author"
            android:textSize="10dip"
            android:paddingLeft="10dip"
            android:layout_toRightOf="@id/cv_tv_downvote"/>

        <ImageView
                android:id="@+id/cv_imgViewReplies"
                android:src="@drawable/ic_view_replies"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_below="@id/cv_caption"
                android:visibility="invisible"
                android:layout_alignParentRight="true"/>
        <com.ezimgur.view.component.ProgressWheel
                android:id="@+id/cv_progress"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:visibility="gone"
                app:matProg_barColor="@color/ezimgur_red"
                app:matProg_progressIndeterminate="true" />
    </RelativeLayout>
</LinearLayout>