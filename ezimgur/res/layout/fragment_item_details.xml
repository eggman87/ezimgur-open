<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/dw_image_content"
        android:layout_height="wrap_content"
        android:layout_width="20dip">
        <com.ezimgur.view.component.IndentedTriangleEdge
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_height="85dip"
            android:layout_width="20dip"/>

        <TextView
            android:id="@+id/tv_image_caption"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="12dip"
            android:padding="2dip"
            android:minLines="2"
            android:maxLines="3"
            android:layout_marginLeft="20dip"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <TextView
            android:id="@+id/tv_image_timeago"
            android:textColor="@color/OpaqueGainsboro"
            android:textStyle="bold"
            android:textSize="10dip"
            android:layout_marginLeft="10dip"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/tv_album_index_indicator"
            android:layout_above="@+id/tv_image_upvotes"/>
        <ImageView
            android:id="@+id/img_upvotes"
            android:onClick="upVoteImage"
            android:layout_width="15dip"
            android:layout_height="17dip"
            android:layout_marginRight="2dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="1dip"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="5dip"/>
        <TextView
            android:id="@+id/tv_image_upvotes"
            android:onClick="upVoteImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:textColor="@color/text_accent"
            android:layout_toRightOf="@id/img_upvotes"
            android:src="@drawable/upvote_empty"
            android:textSize="13dip"/>
        <ImageView
            android:id="@+id/img_downvotes"
            android:onClick="downVoteImage"
            android:layout_width="15dip"
            android:layout_height="17dip"
            android:layout_marginRight="2dip"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/tv_image_upvotes"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="5dip"/>
        <TextView
            android:id="@+id/tv_image_downvotes"
            android:onClick="downVoteImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textColor="@color/Red"
            android:textStyle="bold"
            android:src="@drawable/downvote_empty"
            android:layout_toRightOf="@id/img_downvotes"
            android:textSize="13dip"/>
        <TextView
            android:id="@+id/tv_image_author"
            android:textColor="@color/text_accent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:maxLines="1"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_image_caption"
            android:layout_above="@id/tv_image_author"
            android:textSize="14dip"/>
        <TextView
            android:id="@+id/tv_album_index_indicator"
            android:layout_marginLeft="20dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_image_upvotes"
            android:textColor="@color/text_accent"
            android:layout_alignParentLeft="true"
            android:textSize="13dip"/>
        <TextView
            android:id="@+id/tv_image_views"
            android:textColor="@color/White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/img_views"
            android:layout_marginLeft="2dip"
            android:textSize="13dip"

            />
        <ImageView
            android:id="@+id/img_views"
            android:background="@android:drawable/ic_menu_view"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_toRightOf="@id/tv_image_downvotes"
            android:layout_alignParentBottom="true"
            />

        <TextView
            android:id="@+id/tv_image_points"
            android:textColor="@color/text_accent"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:textSize="13dip"/>
</RelativeLayout>