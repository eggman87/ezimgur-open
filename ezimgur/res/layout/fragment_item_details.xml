<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/dw_image_content"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:layout_width="20dip">
        <!--<com.ezimgur.view.component.IndentedTriangleEdge-->
            <!--android:layout_alignParentTop="true"-->
            <!--android:layout_alignParentLeft="true"-->
            <!--android:layout_height="85dip"-->
            <!--android:layout_width="20dip"/>-->

        <TextView
            android:id="@+id/tv_image_caption"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="14sp"
            android:tag="click_intercepted"
            android:padding="2dip"
            android:minLines="2"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_marginLeft="20dip"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <TextView
            android:id="@+id/tv_image_timeago"
            android:textColor="@color/OpaqueGainsboro"
            android:textStyle="bold"
            android:textSize="10sp"
            android:layout_marginLeft="10dip"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/tv_album_index_indicator"
            android:layout_above="@+id/img_downvotes"/>
        <ImageView
            android:id="@+id/img_upvotes"
            android:onClick="upVoteImage"
            android:tag="click_intercepted"
            android:layout_width="19dip"
            android:layout_height="24dip"
            android:src="@drawable/upvote_empty"
            android:layout_marginRight="2dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="1dip"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dip"/>
        <TextView
            android:id="@+id/tv_image_upvotes"
            android:onClick="upVoteImage"
            android:tag="click_intercepted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:textColor="@color/text_accent"
            android:layout_toRightOf="@id/img_upvotes"
            android:textSize="17sp"/>
        <TextView
            android:id="@+id/tv_image_downvotes"
            android:onClick="downVoteImage"
            android:tag="click_intercepted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/tv_image_upvotes"
            android:textColor="@color/Red"
            android:textStyle="bold"
            android:textSize="17sp"/>
        <ImageView
            android:id="@+id/img_downvotes"
            android:onClick="downVoteImage"
            android:tag="click_intercepted"
            android:layout_width="19dip"
            android:layout_height="24dip"
            android:layout_marginRight="4dip"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/tv_image_downvotes"
            android:src="@drawable/downvote_empty"
            android:layout_marginTop="5dip"/>

        <TextView
            android:id="@+id/tv_image_author"
            android:tag="click_intercepted"
            android:textColor="@color/text_accent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:maxLines="1"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_image_caption"
            android:layout_above="@+id/tv_image_points"
            android:textStyle="bold"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/tv_album_index_indicator"
            android:layout_marginLeft="20dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/img_upvotes"
            android:textColor="@color/text_accent"
            android:layout_alignParentLeft="true"
            android:textSize="13sp"/>
        <TextView
            android:id="@+id/tv_image_views"
            android:textColor="@color/White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/img_views"
            android:layout_marginLeft="2dip"
            android:textStyle="bold"
            android:textSize="12sp"

            />
        <ImageView
            android:id="@+id/img_views"
            android:background="@android:drawable/ic_menu_view"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img_downvotes"
            android:layout_above="@id/tv_image_points"
            android:layout_alignParentBottom="true"
            />

        <TextView
            android:id="@+id/tv_image_points"
            android:textColor="@color/text_accent"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:textSize="15sp"/>
</RelativeLayout>