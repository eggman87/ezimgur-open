<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/fragment_menu"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:clickable="true"
              android:background="@color/main_menu">

    <ListView
        android:id="@+id/listMenuItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/menu_account_container"/>
    <ImageView
        android:id="@+id/menu_zebgur_icon"
        android:src="@drawable/zebgur_mascot_large"
        android:layout_above="@+id/menu_account_container"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="-60dip"
        android:layout_width="wrap_content"/>
    <LinearLayout
        android:id="@+id/menu_account_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="60dip"
        android:layout_alignParentBottom="true"
        android:background="@drawable/selectable_light_ezimgur"
        android:padding="15dip"    >

        <TextView
            android:id="@+id/tv_menu_account_loggedin"
            android:padding="5dip"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/menuNotLoggedIn"/>
    </LinearLayout>
</RelativeLayout>