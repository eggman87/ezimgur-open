<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/v_msg_thread_container"
              android:orientation="vertical"
              android:padding="15dip"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
        <TextView
            android:id="@+id/v_msg_thread_from"
            android:textSize="16dip"
            android:textColor="@color/widget_accent"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <TextView
            android:id="@+id/v_msg_thread_date"
            android:textColor="@color/widget_accent"
            android:textStyle="italic"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/v_msg_thread_body"
            android:layout_below="@id/v_msg_thread_from"
            android:linksClickable="true"
            android:autoLink="web"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
</RelativeLayout>